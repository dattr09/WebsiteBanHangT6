@model WebsiteBanHang.Models.Category

@{
    ViewData["Title"] = "Xóa thể loại";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center text-danger">
                    <i class="fas fa-trash-alt"></i> Xóa thể loại
                </h2>
                <hr>
                <h4 class="text-center text-warning">Bạn có chắc chắn muốn xóa?</h4>

                <div class="mt-3">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">
                            Tên thể loại:
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                    </dl>
                </div>

                <div class="text-center mt-4">
                    <button class="btn btn-danger btn-lg shadow" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                        <i class="fas fa-trash"></i> Xóa ngay
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-arrow-left"></i> Quay về
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal xác nhận xóa -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa thể loại "<strong>@Model.Name</strong>" không? Hành động này không thể hoàn tác!
            </div>
            <div class="modal-footer">
                <form asp-action="DeleteConfirmed">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Xóa
                    </button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Hủy
                </button>
            </div>
        </div>
    </div>
</div>
