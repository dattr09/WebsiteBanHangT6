@model WebsiteBanHang.Models.Category

@{
    ViewData["Title"] = "Thêm thể loại";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center text-primary">
                    <i class="fas fa-folder-plus"></i> Thêm thể loại
                </h2>
                <hr>

                <form asp-action="Add">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Tên thể loại</label>
                        <input asp-for="Name" class="form-control" placeholder="Nhập vào tên thể loại" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success btn-lg shadow">
                            <i class="fas fa-save"></i> Lưu thể loại
                        </button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left"></i> Quay về
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_ValidationScriptsPartial")
