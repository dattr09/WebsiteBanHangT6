@model WebsiteBanHang.Models.Category

@{
    ViewData["Title"] = "Chi tiết thể loại";
}

<h1 class="text-center text-danger my-4">
    <i class="fas fa-info-circle"></i> Chi tiết thể loại
</h1>

<div class="card shadow-lg p-4" style="background-color: white; border-radius: 15px; box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.2);">
    <div class="mb-3">
        <strong><i class="fas fa-hashtag"></i> Mã thể loại:</strong> @Model.Id
    </div>
    <div class="mb-3">
        <strong><i class="fas fa-tag"></i> Tên thể loại:</strong>
        <span class="badge bg-danger p-2">@Model.Name</span>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Index" class="btn btn-secondary shadow-sm">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning shadow-sm">
            <i class="fas fa-edit"></i> Chỉnh sửa
        </a>
    </div>
</div>
