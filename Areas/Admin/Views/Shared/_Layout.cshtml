<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AnhVuAuto</title>
    <link href="~/images/logo.png" rel="icon">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebsiteBanHang.styles.css" asp-append-version="true" />
    <style>
        /* Thanh menu 3D màu xanh */
        .navbar {
            background-color: grey; /* Màu xanh */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Hiệu ứng 3D */
        }

        .navbar-brand, .nav-link {
            color: white !important; /* Màu chữ trắng */
        }

        /* Căn giữa thanh menu */
        .navbar-nav {
            flex-direction: row; /* Đảm bảo các mục nằm ngang */
            justify-content: center; /* Căn giữa các mục trong menu */
            width: 100%;
            text-align: right;
        }

            /* Hiệu ứng hover cho menu */
            .navbar-nav .nav-item:hover {
                background-color: #0056b3; /* Màu nền khi hover */
                border-radius: 5px;
            }

        /* Thêm logo */
        .navbar-brand img {
            max-width: 60px; /* Kích thước logo */
            margin-right: 10px; /* Khoảng cách giữa logo và tên */
        }

        /* Body màu trắng */
        body {
            background-color: white;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        /* Phần chính */
        .container {
            flex: 1; /* Chiếm phần còn lại của không gian */
            padding-top: 50px;
        }

     
        footer {
            background-color: #DDDDDD; 
            text-align: center;
            padding: 5px 0; /* Thu nhỏ chiều cao footer */
        }

            footer a {
                color: #333;
                text-decoration: none;
            }

                footer a:hover {
                    color: #007BFF; /* Màu xanh khi hover */
                }

        /* Các mục trong container chính */
        main {
            padding-bottom: 40px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Logo" /> 
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Trang Chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Add">Thêm Sản Phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product">Sản Phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categories">Thể loại</a>
                        </li>
                    </ul>
                    <partial name= "_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <p>&copy; 2025 AnhVuAuto</p>
            <p>
                Follow us on
                <a href="https://www.facebook.com/ngo.vu.218429/" target="_blank">Facebook</a> |
                <a href="https://www.instagram.com/anh_vu_256/" target="_blank">Instagram</a>
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
