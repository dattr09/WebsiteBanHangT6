@model WebsiteBanHang.Models.Product

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary">@Model.Name</h2>
        <hr>

        <div class="row">
            <div class="col-md-6 text-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Ảnh sản phẩm" class="img-fluid rounded shadow-lg" style="max-width: 100%; height: auto; border-radius: 10px;">
                }
                else
                {
                    <p class="text-muted">Không có hình ảnh</p>
                }
            </div>
            <div class="col-md-6">
                <h3 class="text-success">Giá: @Model.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</h3>
                <p class="fs-5">@Model.Description</p>
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="fas fa-arrow-left"></i> Quay lại danh sách
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-lg ms-3">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </a>
        </div>
    </div>
</div>
