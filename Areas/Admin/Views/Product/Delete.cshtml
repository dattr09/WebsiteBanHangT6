@model WebsiteBanHang.Models.Product

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-danger">Xóa sản phẩm</h2>
        <hr>

        <div class="alert alert-warning text-center">
            <p class="fs-5 fw-bold">Bạn có chắc chắn muốn xóa sản phẩm <span class="text-danger">@Model.Name</span>?</p>
        </div>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="text-center">
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="fas fa-trash-alt"></i> Xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg ms-3">
                    <i class="fas fa-arrow-left"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>
