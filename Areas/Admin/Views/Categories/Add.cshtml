@model WebsiteBanHang.Models.Category

@{
    ViewData["Title"] = "Add";
}

<h1 class="text-center text-primary">Thêm thể loại</h1>

<h4 class="text-center">Thông tin thể loại</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label fw-bold">Tên thể loại</label>
                <input asp-for="Name" class="form-control" placeholder="Nhập vào tên thể loại" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-success w-100" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-outline-primary">Quay về</a>
</div>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
